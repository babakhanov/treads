.cover.gutter-top-3x(style="background: #eee;")
  %table.table.fixed
    %tr(style="height: 100%;")
      %td(style="height: 100%;")
        .messages
          %div(ng-repeat="message in messages track by message.id" on-last-repeat)
            %message-item(message="message" user="users[message.user_id]")
    %tr
      %td
        .clearfix
          %input.form-control.auto-grow-textarea(ng-model="newMsg")
        .gutter-top-xs.text-right
          %button.btn.btn-primary(ng-click="sendMsg()") Send

